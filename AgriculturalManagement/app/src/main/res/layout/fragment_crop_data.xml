<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/selectCrop"
    tools:context=".CropDataFragment">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/horizontalScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#eeeeee">

            <!-- todo replace radio button to buttons in order to avoid confirmation button -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cropTypeLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Select crop" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:id="@+id/cropList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/cropTypeDef"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:buttonTint="@color/black"
                        android:checked="true"
                        android:text="Corn" />

                    <RadioButton
                        android:id="@+id/cropTypeDef2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:buttonTint="@color/black"
                        android:text="Wheat" />
                </RadioGroup>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/confirmCrop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#999999"
                    android:text="Confirm" />

            </TableRow>

        </LinearLayout>

    </HorizontalScrollView>

            <include
                layout="@layout/include_text_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardName='@{@string/description}'
                app:cardText="@{viewModel.desc}"
                app:cardBackgroundColorInt="@{@color/purple_100}" />
        </LinearLayout>
    </LinearLayout>
</layout>
